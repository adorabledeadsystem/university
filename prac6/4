using System;
using System.Text;
using System.IO;
namespace prac6_4
{
    class Program
    {
        static void Main(string[] args)
        {
            string s = "";

            int counter = 0;
            string FileName = "C:\\file\\textfile.txt";
            
            FileInfo file = new FileInfo(FileName);
            if (!file.Exists)
            {
                Console.WriteLine("File doesnt exist");
            }
            StreamReader sr = new StreamReader(FileName, System.Text.Encoding.Default);
            while ((s = sr.ReadLine()) != null)
            {
                    counter++;
                    Console.WriteLine(s);
            }
            string[] textMass = new string[counter];
            int i = 0;
            while((s = sr.ReadLine()) != null)
            {
                textMass[i] = s;
                Console.WriteLine(textMass[i]);
                i++;
            }
            Console.WriteLine();
            Console.WriteLine(counter);
            sr.Close();
            string FileName2 = "C:\\file\\textfile2.txt";
            StreamWriter sw = new StreamWriter(FileName2);
            for(i = 0; i < counter; i++)
            {
                sw.Write(textMass[i]);
            }
            sw.Close();
            StreamReader sr2 = new StreamReader(FileName2);
            while ((s = sr2.ReadLine()) != null)
            {
                Console.WriteLine(s);
            }


        }
    }
}
