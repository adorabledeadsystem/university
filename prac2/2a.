{
    class Program
    {
        static void Main(string[] args)
        {
            int august = 31;
            bool temp_flag = false;
            while(temp_flag != true)
            {
                Console.WriteLine("Your date:");
                int date = Convert.ToInt32(Console.ReadLine());
                if(date <= 31)
                {
                    temp_flag = true;
                    break;
                }
                else{ temp_flag = false; }
            }
            int today = DateTime.Day;
        }
